<% include partials/header %>

<div class="ui main text container segment">
    <div class="ui huge header"><%= blog.title %></div> 
        <div class="ui top attached segement">
            <div class="item">
                <img class="ui centered rounded image" src="<%= blog.image %>">
                <div class="content">
                    <span><%= blog.created.toDateString() %></span>
                </div>
                <div class="description">
                    <p><%- blog.body %></p>
                    <a href="/blogs/<%= blog._id %>/edit" class="ui big blue basic button">Edit</a>
                </div>
                <form id="inlineForm" action="/blogs/<%= blog._id %>?_method=DELETE" method="POST">
                    <button class="ui big red button basic">Delete</button>
                </form>
            </div>
        </div>
        
   
        
</div>

<% include partials/footer%>